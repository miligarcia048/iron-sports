<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head>
<body>

<div class="edit-profile">
    <section  >
    <div class="container  ">
 
<div >
				<div class="card p-4"  data-aos="zoom-in">
  <h1 class="mb-4">Edit your profile</h1>
       <div class="row">
					<div class="col-lg-4">
 <p class="mb-0 labels" >Profile picture</p>
          	<div class="card-body text-center">
							<img src="{{user.picture_url}}" alt="avatar"
								class="rounded-circle img-fluid" style="width: 150px;">
          	</div>
          	<div class=" justify-content-center mb-2">
              <form  action="/edit" method="post" enctype="multipart/form-data">
                
                    <input type="file" name="picture_url">
                 
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
					</div>
					{{#if user}}
      
      		<div class="col-lg-8">
      
         
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 labels" >Username</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.username}}</p>
                <button id="user-btn" class="edit-button">Edit</button>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 labels" >Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
                <button id="email-btn" class="edit-button">Edit</button>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0 labels">Password</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">************</p>
                <button id="pass-btn" class="edit-button">Edit</button>
              </div>
            </div>
          
       

        		{{/if}}
        </div>
</div>
</div>

      
</section>
 
    <div class="popup userPop">
        <form action="/edit" method="post">
            <label>
                Username
                <input type="text" name="username">
            </label>
            <button type="submit">Edit</button>
        </form>
            <button id="exitUser">Exit</button>
    </div>

    <div class="popup emailPop">
        <form action="/edit" method="post">
            <label>
                Email
                <input type="text" name="email">
            </label>
            <label>
                Confirm email
                <input type="text" name="confirmedEmail">
            </label>
            <button type="submit">Edit</button>
        </form>
            <button id="exitEmail">Exit</button>
    </div>

    <div class="popup passPop">
        <form action="/edit" method="post">
            <label>
                Current Password
                <input type="text" name="oldPassword">
            </label>
            <label>
                New Password
                <input type="text" name="newPassword">
            </label>
            <label>
                Confirm New Password
                <input type="text" name="confirmedNewPassword">
            </label>
            <button type="submit">Edit</button>
        </form>
            <button id="exitPass">Exit</button>
    </div>
</div>
 

</body>
   <script>
        document.getElementById("pass-btn").addEventListener("click", function(){
            document.querySelector(".passPop").style.display = "flex";
        });
        document.getElementById("email-btn").addEventListener("click", function(){
            document.querySelector(".emailPop").style.display = "flex";
        });
        document.getElementById("user-btn").addEventListener("click", function(){
            document.querySelector(".userPop").style.display = "flex";
        });

        document.getElementById("exitUser").addEventListener("click", function(){
            document.querySelector(".userPop").style.display = "none";
        });
        document.getElementById("exitEmail").addEventListener("click", function(){
            document.querySelector(".emailPop").style.display = "none";
        });
        document.getElementById("exitPass").addEventListener("click", function(){
            document.querySelector(".passPop").style.display = "none";
        });

        document.addEventListener("keydown", (event) => {
            if(event.key === "Escape") {
                document.querySelector(".userPop").style.display = "none";
                document.querySelector(".emailPop").style.display = "none";
                document.querySelector(".passPop").style.display = "none";
            }
        });

    </script>
</html>