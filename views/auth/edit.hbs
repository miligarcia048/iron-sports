<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
</head>
<body>


    <section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
        <div class="col">
        </div>
    </div>

    <div class="row">
      <div class="col-lg-4">
        <div class="card mb-4">
          <div class="card-body text-center">
            <img src="{{user.picture_url}}" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
          </div>
          <div class="d-flex justify-content-center mb-2">
              <form action="/edit" method="post" enctype="multipart/form-data">
                <label>
                   Image
                    <input type="file" name="picture_url">
                  </label>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
        </div>

        <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
            <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fas fa-globe fa-lg text-warning"></i>
                <p class="mb-0">Favorite Teams</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-github fa-lg" style="color: #333333;"></i>
                <p class="mb-0">mdbootstrap</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-twitter fa-lg" style="color: #55acee;"></i>
                <p class="mb-0">@mdbootstrap</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-instagram fa-lg" style="color: #ac2bac;"></i>
                <p class="mb-0">mdbootstrap</p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                <i class="fab fa-facebook-f fa-lg" style="color: #3b5998;"></i>
                <p class="mb-0">mdbootstrap</p>
              </li>
            </ul>
          </div>
        </div>
      </div>

      {{#if user}}
      
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0" style="color: #3b5998;">Username</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.username}}</p>
                <button id="user-btn">Edit</button>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0" style="color: #3b5998;">Email</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">{{user.email}}</p>
                <button id="email-btn">Edit</button>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <p class="mb-0" style="color: #3b5998;">Password</p>
              </div>
              <div class="col-sm-9">
                <p class="text-muted mb-0">************</p>
                <button id="pass-btn">Edit</button>
              </div>
            </div>
          </div>
        </div>

        {{/if}}

        <div class="row">
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <p class="mb-4"><span class="text-primary font-italic me-1"></span> Project Status
                </p>
                <p class="mb-1" style="font-size: .77rem;">Web Design</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Website Markup</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">One Page</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 89%" aria-valuenow="89"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Mobile Template</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="55"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Backend API</p>
                <div class="progress rounded mb-2" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card mb-4 mb-md-0">
              <div class="card-body">
                <p class="mb-4"><span class="text-primary font-italic me-1">assigment</span> Project Status
                </p>
                <p class="mb-1" style="font-size: .77rem;">Web Design</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 80%" aria-valuenow="80"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Website Markup</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 72%" aria-valuenow="72"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">One Page</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 89%" aria-valuenow="89"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Mobile Template</p>
                <div class="progress rounded" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 55%" aria-valuenow="55"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <p class="mt-4 mb-1" style="font-size: .77rem;">Backend API</p>
                <div class="progress rounded mb-2" style="height: 5px;">
                  <div class="progress-bar" role="progressbar" style="width: 66%" aria-valuenow="66"
                    aria-valuemin="0" aria-valuemax="100"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
 
    <div class="popup userPop">
        <form action="/edit" method="post">
            <label>
                Username
                <input type="text" name="username">
            </label>
            <button type="submit">Edit</button>
        </form>
            <button id="exitUser">Exit</button>
    </div>

    <div class="popup emailPop">
        <form action="/edit" method="post">
            <label>
                Email
                <input type="text" name="email">
            </label>
            <label>
                Confirm email
                <input type="text" name="confirmedEmail">
            </label>
            <button type="submit">Edit</button>
        </form>
            <button id="exitEmail">Exit</button>
    </div>

    <div class="popup passPop">
        <form action="/edit" method="post">
            <label>
                Current Password
                <input type="text" name="oldPassword">
            </label>
            <label>
                New Password
                <input type="text" name="newPassword">
            </label>
            <label>
                Confirm New Password
                <input type="text" name="confirmedNewPassword">
            </label>
            <button type="submit">Edit</button>
        </form>
            <button id="exitPass">Exit</button>
    </div>

    <script>
        document.getElementById("pass-btn").addEventListener("click", function(){
            document.querySelector(".passPop").style.display = "flex";
        });
        document.getElementById("email-btn").addEventListener("click", function(){
            document.querySelector(".emailPop").style.display = "flex";
        });
        document.getElementById("user-btn").addEventListener("click", function(){
            document.querySelector(".userPop").style.display = "flex";
        });

        document.getElementById("exitUser").addEventListener("click", function(){
            document.querySelector(".userPop").style.display = "none";
        });
        document.getElementById("exitEmail").addEventListener("click", function(){
            document.querySelector(".emailPop").style.display = "none";
        });
        document.getElementById("exitPass").addEventListener("click", function(){
            document.querySelector(".passPop").style.display = "none";
        });

        document.addEventListener("keydown", (event) => {
            if(event.key === "Escape") {
                document.querySelector(".userPop").style.display = "none";
                document.querySelector(".emailPop").style.display = "none";
                document.querySelector(".passPop").style.display = "none";
            }
        });

    </script>

</body>
</html>